<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="Interface-SimuladexPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>Model.Aluno</class>
    <class>Model.Curso</class>
    <class>Model.Disciplina</class>
    <class>Model.Professor</class>
    <class>Model.Prova</class>
    <class>Model.ProvaAluno</class>
    <class>Model.Questao</class>
    <class>Model.QuestaoProva</class>
    <class>Model.RespostaQuestao</class>
    <class>Model.Turma</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/simuladex?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="mllp"/>
    </properties>
  </persistence-unit>
</persistence>
